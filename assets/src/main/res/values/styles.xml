<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">
            @style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen
        </item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar
        </item>


        <item name="snackbarStyle">@style/Snackbar</item>
    </style>

    <style name="Snackbar" parent="@style/Widget.MaterialComponents.Snackbar.FullWidth">
        <item name="android:background">@drawable/snack_bg</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/content_8</item>
        <item name="android:layout_marginRight">@dimen/content_8</item>
        <item name="android:layout_marginBottom">@dimen/height_90</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/image_placeholder</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/text_dark</item>
    </style>

    <style name="BaseBlackText">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HugeText" parent="BaseBlackText">
        <item name="android:textSize">@dimen/text_huge</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">@dimen/letter_space_01</item>
    </style>

    <style name="NormalText" parent="BaseBlackText">
        <item name="android:letterSpacing">@dimen/letter_space_01</item>
        <item name="android:lineSpacingExtra">@dimen/letter_space_extra_12</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="SubText" parent="BaseBlackText">
        <item name="android:letterSpacing">@dimen/letter_space_03</item>
        <item name="android:lineSpacingExtra">@dimen/letter_space_extra_12</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TitleItemText" parent="BaseBlackText">
        <item name="android:letterSpacing">@dimen/letter_space_01</item>
        <item name="android:lineSpacingExtra">@dimen/letter_space_extra_8</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="SubTitleItemText" parent="BaseBlackText">
        <item name="android:letterSpacing">@dimen/letter_space_02</item>
        <item name="android:lineSpacingExtra">@dimen/letter_space_extra_6</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="FabLabelText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:shadowColor">#80161616</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:layout_marginStart">@dimen/content_4</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TopRoundedImageView">
        <item name="cornerSizeTopLeft">@dimen/md_corners_round</item>
        <item name="cornerSizeTopRight">@dimen/md_corners_round</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerSize">@dimen/content_6</item>
    </style>

</resources>